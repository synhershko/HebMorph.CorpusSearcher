<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">

<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<head>
    <title>HebMorph @ViewBag.Title</title>
    <link href="@Url.Content("~/Content/thickbox.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/images/Envision.css")" rel="stylesheet" type="text/css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.6.1/jquery.min.js" type="text/javascript"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/thickbox-compressed.js")"></script>
@if (!string.IsNullOrWhiteSpace(HebMorph.CorpusSearcher.Settings.GoogleAnalyticsAccount))
{
<script type="text/javascript">
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', '@HebMorph.CorpusSearcher.Settings.GoogleAnalyticsAccount']);
      _gaq.push(['_trackPageview']);
      (function () {
          var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
          ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
          var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();
</script>
}
</head>

<body>
<div id="wrap">
		
		<!--header -->
		<div id="header">			
				
			<h1 id="logo-text"><a href="http://hebmorph.code972.com/">HebMorph</a></h1>		
			<p id="slogan">Making Hebrew properly searchable</p>		
			
			<div id="header-links">
			<p>@Html.Partial("_LogOnPartial")</p>		
		</div>		
						
		</div>

        <!-- menu -->	
		<div  id="menu">
			<ul>
				<li id="current">@Html.ActionLink("Home", "Index", "Home")</li>
				<li><a href="http://hebmorph.code972.com/pages/about">About</a></li>
                <li><a href="http://www.code972.com/blog/about/">Contact</a></li>
				<li class="last">@Html.ActionLink("System Status", "Status", "Home")</li>
			</ul>
		</div>					
        
        <!-- content-wrap starts here -->
		<div id="content-wrap">
			<div id="sidebar">
                @Html.Partial("_SearchFormPartial", ViewBag.Query != null ? (HebMorph.CorpusSearcher.ViewModels.SearchQuery)ViewBag.Query : new HebMorph.CorpusSearcher.ViewModels.SearchQuery())
					
				<h3>Links</h3>
				<ul class="sidemenu">
                    <li><a href="http://github.com/synhershko/HebMorph">Source code</a></li>
					<li><a href="http://www.code972.com/blog/hebmorph/">HebMorph on Code972</a></li>
                    <li><a href="http://www.code972.com/blog/tag/hebmorph/feed">HebMorph RSS Feed</a></li>
                    <li><a href="https://lists.sourceforge.net/lists/listinfo/hebmorph-thinktank">Mailing list</a></li>
				</ul>
				
				<h3>Wise Words</h3>
				<div class="left-box">
					<p>&quot;Evaluation of the past is the first step toward 
					vision for the future.&quot; </p>
					
					<p class="align-right">- Chris Widener</p>
				</div>									
			</div>
				
			<div id="main">
                @RenderBody()
			</div>
		
		<!-- content-wrap ends here -->	
		</div>
					
		<!--footer starts here-->
		<div id="footer">
			
            <p>
		    &copy; 2011 <strong>Itamar Syn-Hershko</strong>

            &nbsp;&nbsp;&nbsp;&nbsp;

		    <a href="http://www.bluewebtemplates.com/" title="Website Templates">website templates</a> by <a href="http://www.styleshout.com/">styleshout</a>

            &nbsp;&nbsp;&nbsp;&nbsp;

		    <a href="http://hebmorph.code972.com/">Home</a> |
            <a href="http://validator.w3.org/check?uri=referer">XHTML</a> |
		    <a href="http://jigsaw.w3.org/css-validator/check/referer">CSS</a>
   	    </p>
				
		</div>	

<!-- wrap ends here -->
</div>

</body>
</html>
