@model HebMorph.CorpusSearcher.ViewModels.SearchQuery
<div class="rtlContainer">
@using (Html.BeginForm("Search", "Home", FormMethod.Get, new { Class = "searchform" }))
{
    <p><input type="text" class="textbox" id="query" name="query" value="@Model.Query" /><input class="button" type="submit" value="חפש" /></p>
    <p>&nbsp;</p>
    <p><b>קורפוס - Corpus:</b> @Html.DropDownList("corpusName", Model.AvailableIndexes)</p>
    <p>&nbsp;</p>
    <p><b>סוג חיפוש - Search type:</b></p>
    <p>@Html.RadioButton("searchType", "Morphologic", Model.SearchType == HebMorph.CorpusSearcher.Core.Index.SearchType.Morphologic) מורפולוגי - Morphologic</p>
    <p>@Html.RadioButton("searchType", "AsTyped", Model.SearchType == HebMorph.CorpusSearcher.Core.Index.SearchType.AsTyped) כפי שהוקלד - As typed</p>
    <p>@Html.RadioButton("searchType", "LuceneDefault", Model.SearchType == HebMorph.CorpusSearcher.Core.Index.SearchType.LuceneDefault) With no help from HebMorph</p>
}
</div>
